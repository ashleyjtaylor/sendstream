{
  "extends": "@sendstream/ts-config/base.json",
  "display": "apps/api",
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/middlewares/*": ["src/middlewares/*"]
    }
  }
}
